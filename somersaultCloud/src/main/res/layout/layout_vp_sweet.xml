<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical">

    <org.somersault.cloud.lib.widget.sheet.widget.FreeGrowUpParentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_height"
        android:layout_gravity="bottom"
        android:id="@+id/freeGrowUpParentF"
        app:offset="@dimen/arc_max_height"
        android:orientation="vertical">

        <org.somersault.cloud.lib.widget.sheet.widget.SweetView
            android:id="@+id/sweetView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <org.somersault.cloud.lib.widget.sheet.widget.IndicatorView
            android:id="@+id/indicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:paddingTop="70dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="42dp"
            android:clipChildren="false"
            android:overScrollMode="never"/>

        <org.somersault.cloud.lib.widget.sheet.widget.CRImageView
            android:id="@+id/sliderIM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_slider_line" />
    </org.somersault.cloud.lib.widget.sheet.widget.FreeGrowUpParentRelativeLayout>

</FrameLayout>
